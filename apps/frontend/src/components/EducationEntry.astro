---
interface Props {
  institution: string;
  degree: string;
  location: string;
  timespan: string;
}

const { institution, degree, location, timespan } = Astro.props;
---

<div
  class="border-gray-light dark:border-gray-light-invert flex flex-col items-center justify-between gap-4 rounded-xl border p-4 shadow-sm sm:flex-row sm:p-6"
>
  <div class="flex flex-col">
    <span class="text-blue dark:text-blue-invert text-xl font-bold">
      {institution}
    </span>
    <span class="italic">{degree}</span>
  </div>
  <div class="flex flex-col self-end">
    <span class="text-right">{location}</span>
    <span class="text-right">{timespan}</span>
  </div>
</div>

import Layout from '@/layouts/Layout.astro';
import InlineWithIcon from '@/components/InlineWithIcon.astro';
import ProjectEntry from '@/components/ProjectEntry.astro';
import TechBadge, {
  type Props as TechBadgeProps,
} from '@/components/TechBadge.astro';
import BaseHead from '@/components/BaseHead.astro';
import WorkExpEntry from '@/components/WorkExpEntry.astro';
